<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzu.video.dao.VideoMapper">
    <sql id="insertFields">
        userId,video_url,thumbnail,title,duration,tag,description,create_time
    </sql>

    <sql id="selectFields">
        id,userId,video_url,thumbnail,title,duration,tag,description,create_time
    </sql>
    <select id="selectById" resultType="Video">
        select <include refid="selectFields"></include>
        from video
        where id=#{id}
        order by create_time desc
    </select>

    <select id="selectByUserId" resultType="Video">
        select <include refid="selectFields"></include>
        from video
        where userId=#{userId}
        order by create_time desc
    </select>

    <insert id="insertVideo" parameterType="Video" keyProperty="id">
        insert into videe(<include refid="insertFields"></include>)
        values(#{userId},#{videoUrl},#{thumbNail},#{title},#{duration},#{tag},#{description},#{createTime})
    </insert>
</mapper>