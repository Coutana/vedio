<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzu.video.dao.VideoMapper">
    <sql id="insertFields">
        uid,url,cover,duration,tag,description,create_time,status
    </sql>

    <sql id="selectFields">
        vid,uid,url,cover,duration,tag,description,create_time,status
    </sql>
    <select id="selectById" resultType="Video">
        select <include refid="selectFields"></include>
        from video
        where vid=#{vid}
        order by create_time desc
    </select>

    <select id="selectByUserId" resultType="Video">
        select <include refid="selectFields"></include>
        from video
        where uid=#{uid}
        order by create_time desc
    </select>

    <insert id="insertVideo" parameterType="Video" keyProperty="vid">
        insert into video(<include refid="insertFields"></include>)
        values(#{vid},#{uid},#{url},#{cover},#{duration},#{tag},#{description},#{createTime},#{status})
    </insert>
</mapper>